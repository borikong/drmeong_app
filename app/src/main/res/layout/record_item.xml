<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#ffffff"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--날짜를 나타내느 -->
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:padding="4dp"
        android:background="#fdeced"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date_textView"
            android:layout_marginLeft="20dp"
            android:textColor="#292828"
            android:text="08월 02일"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:padding="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--시간-->
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time_textView"
                android:layout_marginLeft="20dp"
                android:textColor="#292828"
                android:text="03:12"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/AMorPM"
                android:layout_marginLeft="8dp"
                android:textColor="#585757"
                android:text="PM"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!-- 기록 내용-->
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sypmtom1_textView"
                android:textColor="#ba4e4e"
                android:layout_marginBottom="4dp"
                android:text="설사를 한다"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sypmtom2_textView"
                android:layout_marginBottom="4dp"
                android:textColor="#994141"
                android:text="심한 설사를 반복한다."
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sypmtom3_textView"
                android:layout_marginBottom="4dp"
                android:textColor="#5e2727"
                android:text="혈변이 나온다."
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>